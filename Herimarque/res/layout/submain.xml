<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabBackground"
        android:orientation="horizontal"
        android:paddingTop="0px" >

        <Button
            android:id="@+id/infoButt"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="0px"
            android:layout_weight="1"
            android:background="@drawable/tab_info_selector" />

        <Button
            android:id="@+id/createButt"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="0px"
            android:layout_weight="1"
            android:background="@drawable/tab_create_selector" />

        <Button
            android:id="@+id/showButt"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="0px"
            android:layout_weight="1"
            android:background="@drawable/tab_show_selector" />

        <Button
            android:id="@+id/configButt"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="0px"
            android:layout_weight="1"
            android:background="@drawable/tab_config_selector" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/basic" >

        <!-- fragment -->

        <fragment
            android:id="@+id/info_main"
            android:name="net.julnamoo.swm.herimarque.info.InfoMainFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/create_main"
            android:name="net.julnamoo.swm.herimarque.create.CreateMainFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/show_main"
            android:name="net.julnamoo.swm.herimarque.show.ShowMainFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/config_main"
            android:name="net.julnamoo.swm.herimarque.config.ConfigMainFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>